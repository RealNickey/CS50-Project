{
  "manifest_version": 3,
  "name": "Google Meet Assistant",
  "version": "1.0",
  "description": "Automatically handles Google Meet controls and tab switching",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icon128.png"
  }
}
